class Solution {
  public:
    vector<int> bellmanFord(int n, vector<vector<int>>& edges, int src) {
        vector<int> dis(n, 1e8);
        dis[src] = 0;
        
        for(int i = 0;i < n - 1;i++) {
            for(auto edge : edges) {
                int u = edge[0], v = edge[1], w = edge[2];
                if(dis[u] != 1e8 && dis[u] + w < dis[v]) {
                    dis[v] = dis[u] + w;
                }
            }
        }
        
        // check for cycle
        for(auto edge : edges) {
            int u = edge[0], v = edge[1], w = edge[2];
            if(dis[u] != 1e8 && dis[u] + w < dis[v]) {
                // there is a cycle
                return {-1};
            }
        }
        
        return dis;
        
    }
};
