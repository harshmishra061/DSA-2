class Solution {
    bool isValidBST(TreeNode* node, long mini, long maxi) {
        if(node == NULL) return true;
        if(mini >= node->val || maxi <= node->val) return false;
        return isValidBST(node->left, mini, node->val) && isValidBST(node->right, node->val, maxi);
    }
public:
    bool isValidBST(TreeNode* root) {
        return isValidBST(root, LONG_MIN, LONG_MAX);
    }
};
