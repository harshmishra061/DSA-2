class Solution {
  public:
    vector<int> leftView(Node *root) {
        // Just take first element from each level on level order traversal
        vector<int> res;
        queue<Node*> q;
        q.push(root);
        while(!q.empty()) {
            res.push_back(q.front()->data);
            int sz = q.size();
            while(sz--) {
                Node* node = q.front(); q.pop();
                if(node->left != NULL) q.push(node->left);
                if(node->right != NULL) q.push(node->right);
            }
        }
        return res;
    }
};


// Recursive
class Solution {
    void preorder(Node* node, int level, vector<int>& res) {
        if(node == NULL) return;
        if(res.size() == level) res.push_back(node->data);
        preorder(node->left, level + 1, res);
        preorder(node->right, level + 1, res);
    }
  public:
    vector<int> leftView(Node *root) {
        vector<int> res;
        preorder(root, 0, res);
        return res;
    }
};
